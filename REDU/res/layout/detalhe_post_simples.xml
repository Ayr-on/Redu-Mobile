<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_details"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/cinza_post"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout android:id="@+id/backgroundPerfil"
            android:layout_width="61dp" android:layout_height="65dp" android:layout_marginTop="10dp" android:background="@drawable/perfil_default">
            
	        <ImageView
	            android:id="@+id/imgPerfil"
	            android:layout_width="57dp"
	            android:layout_height="52dp"
	            android:layout_marginLeft="2dp"
	            android:layout_marginTop="5dp"
	            >

	        </ImageView>
	        
        </RelativeLayout>
      
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/usuario_nome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alex Sandro"
                    android:textColor="@color/titulos"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>
             <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/acao_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="comentou no mural da aula"
                    android:textColor="@color/preto"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/local_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Mural da postagem"
                    android:textColor="@color/titulos"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>
            
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal" >

                   <LinearLayout
                     android:layout_width="150dp"
                     android:layout_height="wrap_content"
                     android:gravity="left"
                     android:orientation="horizontal" >
                     
	                 <TextView
	                     android:id="@+id/tempo_passado"
	                     android:layout_width="match_parent"
	                     android:layout_height="wrap_content"
	                     android:layout_weight="4.29"
	                     android:text="hÃ¡ 5 dias"
	                     android:textColor="@color/gray"
	                     android:textSize="10dp" />

                  </LinearLayout>
             </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
